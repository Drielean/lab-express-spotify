<div class="d-flex">
  {{#each albums}}
  <div class="card" style="width: 18rem">
    <img
      src="{{this.images.1.url}}"
      class="card-img-top"
      alt="{{ this.name }}"
    />
    <div class="card-body">
      <h5 class="card-title">{{ this.name }}</h5>
      <a href="/tracks/{{ this.id }}" class="btn btn-primary">View Album</a>
    </div>
  </div>
  {{/each}}
</div>
